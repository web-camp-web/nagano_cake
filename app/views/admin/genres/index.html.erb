<div class="container">
  <thead>
    <h1>ジャンル一覧・追加</h1>
    <div class="row">
    <%= form_with model:[:admin,@genre],local: true do |f| %>
      <tr>
        <th>ジャンル名</th>
        <th><%= f.text_field :name %></th>
        <th><%= f.submit '新規登録' %></th>
      </tr>
      <% end %>
    </div>
  </thead>

  <tbody>
    <h2>ジャンル</h2>
    <table>
      <% @genres.each do |genre| %>
      <tr>
        <td><%= genre.name %></td>
        <td><%= link_to " 編集する", edit_admin_genre_path(genre) %></td>
      </tr>
      <% end %>
    </table>
  </tbody>
</div>