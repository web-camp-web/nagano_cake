<table class="table table-striped">
    <div class="row">
    <thead>
      <tr>
        <th>商品ID</th>
        <th>商品名</th>
        <th>税抜き価格</th>
        <th>ジャンル</th>
        <th>ステータス</th>
      </tr>
    </thead>
  </div>
    <tbody>
      <div class="row">
    <% items.each do |item| %>
      <tr>
        <td><%= item.id %></td>
        <td><%= link_to item.name, admin_item_path(item) %></td>
        <td><%= (item.price).to_s(:delimited) %></td>
        <td><%= item.genre.name %></td>
        <% if item.is_active %>
          <td>販売中</td>
        <% else %>
          <td>販売停止中</td>
        <% end %>
      </tr>
      <% end %>
      </div>
    </tbody>
  </table>