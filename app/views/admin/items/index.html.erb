<h1>商品一覧</h1>
<table>
<thead>
  <tr>
    <th>商品ID</th>
    <th>商品名</th>
    <th>税抜き価格</th>
    <th>ジャンル</th>
    <th>ステータス</th>
  </tr>
</thead>

<tbody>
<% @items.each do |item| %>
<tr>
<td><%= item.id %></td>
<td><%= link_to item.name, admin_item_path(item) %></td>
<td><%= item.genre.name %></td>
<td><%= item.price %></td>
<% if item.is_active %>
<td>販売中</td>
<% else %>
<td>販売停止中</td>
<% end %>
</tr>
<% end %>
</tbody>
</table>
<%= link_to "ジャンル一覧・追加", admin_genres_path %>
<%= link_to "商品作成はこちら", new_admin_item_path %>
