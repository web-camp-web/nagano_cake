

<%= form_with model: [:admin,item], local: true do |f| %>
  <div class="form-group">
   <%= f.label "商品画像"%>
   <%= f.attachment_field :image %>
  </div>
  <div class="form-group">
    <%= f.label "商品名" %>
    <%= f.text_field :name %>
  </div>
  <div class="form-group">
    <%= f.label "商品説明" %>
    <%= f.text_area :caption %>
  </div>
  <div class="form-group">
    <%= f.label "ジャンル選択" %>
    <%= f.collection_select :genre_id, genres, :id, :name, prompt: "選択してください" %>
  </div>
  <div class="form-group">
    <%= f.label "税抜価格" %>
    <%= f.text_field :price %>円
  </div>
  <div class="form-group">
    販売中<%= f.radio_button :is_active, true %>
    販売停止中<%= f.radio_button :is_active, false %>
  </div>
  <div class="form-group">
<%= f.submit '送信', class: 'btn btn-success' %>
</div>
<% end %>