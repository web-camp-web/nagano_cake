<div class="container">
  <h2 class="page-header">注文履歴一覧</h2>
  <div class="row">
    <div class="col-lg-1 col-md-0 col-sm-0"></div>
    <div class="col-lg-10 col-md-12 col-sm-12">
      <table class="table table-hover">
        <thead class="thead-light">
          <tr>
            <th>購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
            <th>注文ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order|%>
            <tr>
              <!-- cssでリンクの文字色を黒、下線ありに変更予定 -->
              <td><%= link_to order.created_at.strftime("%Y/%m/%d %H:%M:%S"), admin_order_path(order) %></td>
              <td><%= customer_full_name(order.customer.id) %></td>
              <td><%= order.order_items.sum(:quantity) %></td>
              <td><%= order.status%></td>
            </tr>
          <%end%>
        </tbody>
      </table>
    </div>
    <div class="col-lg-1 col-md-0 col-sm-0"></div>
  </div>

</div>
