<div class="container">
  <h2 class="page-header">注文履歴一覧</h2>
  <div class="row">
    <div class="col-md-1"></div>
    <div class="col-md-10">
      <table class="table">
        <thead>
          <tr>
            <th>購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
            <th>注文ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order|%>
            <tr>
              <td><%= link_to order.created_at.strftime("%Y/%m/%d %H:%M:%S"), admin_order_path(order) %></td>
              <td><%= customer_full_name(order.customer.id) %></td>
              <td><%= order.order_items.sum(:quantity) %></td>
              <td><%= order.status%></td>
            </tr>
          <%end%>
        </tbody>
      </table>
    </div>
  </div>

</div>
