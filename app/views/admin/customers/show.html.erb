<div class="container">
  <h2 class="page-header">
    <%= customer_full_name(@customer.id) %>さんの会員詳細
  </h2>
  <div class="row">
    <div class="col-lg-2 col-md-1 col-sm-0"></div>
    <div class="col-lg-8 col-md-10 col-sm-12">
      <table class="table table-borderless">
        <tbody>
          <tr>
            <td>会員ID</td>
            <td><%= @customer.id %></td>
          </tr>
          <tr>
            <td>氏名</td>
            <td><%= @customer.last_name %>  <%= @customer.first_name %></td>
          </tr>
          <tr>
            <td>フリガナ</td>
            <td><%= @customer.last_name_kana %>  <%= @customer.first_name_kana %></td>
          </tr>
          <tr>
            <td>郵便番号</td>
            <td><%= @customer.postcode %></td>
          </tr>
          <tr>
            <td>住所</td>
            <td><%= @customer.address %></td>
          </tr>
          <tr>
            <td>電話番号</td>
            <td><%= @customer.phone_number %></td>
          </tr>
          <tr>
            <td>メールアドレス</td>
            <td><%= @customer.email %></td>
          </tr>
          <tr>
            <td>会員ステータス</td>
            <% if @customer.is_valid == true %>
              <td class="text-success">有効</td>
            <% else %>
              <td class="text-muted">退会</td>
            <% end %>
          </tr>
        </tbody>
      </table>
      <div>
        <%= link_to "編集する",edit_admin_customer_path(@customer), class: "btn btn-success" %>
        <%= link_to "注文履歴一覧を見る", admin_orders_path(customer_id: @customer.id), class: "btn btn-primary" %>
      </div>
    </div>
    <div class="col-lg-2 col-md-1 col-sm-0"></div>
  </div>
</div>
