<div class="container">
  <h2 class="page-header">
    <%= customer_full_name(@customer.id) %>さんの会員情報編集
  </h2>
  <div class="row">
    <div class="col-lg-1 col-md-0 col-sm-0"></div>
    <div class="col-lg-10 col-md-12 col-sm-12">
      <%= form_with model: @customer, url: admin_customer_path(@customer.id), local: true do |f| %>
        <%= render "layouts/error", obj: @customer %>
        <div class="form-group form-row">
          <div class="col-2">
            <%= f.label "会員ID" %>
          </div>
          <div class="col-10">
            <%= f.label "#{@customer.id}" %>
          </div>
        </div>
        <div class="form-group form-row">
          <div class="col-2">
            <%= f.label "氏名" %>
          </div>
          <div class="col-lg-4 col-md-4 col-sm-5">
            <%= f.text_field :last_name %>
          </div>
          <div class="col-lg-4 col-md-4 col-sm-5">
            <%= f.text_field :first_name %>
          </div>
          <div class="col-lg-2 col-md-2 col-sm-0"></div>
        </div>
        <div class="form-group form-row">
          <div class="col-2">
            <%= f.label "フリガナ" %>
          </div>
          <div class="col-lg-4 col-md-4 col-sm-5">
            <%= f.text_field :last_name_kana %>
          </div>
          <div class="col-lg-4 col-md-4 col-sm-5">
            <%= f.text_field :first_name_kana %>
          </div>
          <div class="col-lg-2 col-md-2 col-sm-0"></div>
        </div>
        <div class="form-group form-row">
          <div class="col-2">
            <%= f.label "郵便番号" %>
          </div>
          <div class="col-lg-4 col-md-4 col-sm-5">
            <%= f.text_field :postcode %>
          </div>
          <div class="col-lg-6 col-md-6 col-sm-5"></div>
        </div>
        <div class="form-group form-row">
          <div class="col-2">
            <%= f.label "住所" %>
          </div>
          <div class="col-10">
            <%= f.text_field :address, class: "address-form" %>
          </div>
        </div>
        <div class="form-group form-row">
          <div class="col-2">
            <%= f.label "電話番号" %>
          </div>
          <div class="col-lg-4 col-md-4 col-sm-5">
            <%= f.text_field :phone_number %>
          </div>
          <div class="col-lg-6 col-md-6 col-sm-5"></div>
        </div>
        <div class="form-group form-row">
          <div class="col-2">
            <%= f.label "メールアドレス" %>
          </div>
          <div class="col-lg-4 col-md-4 col-sm-5">
            <%= f.text_field :email %>
          </div>
          <div class="col-lg-6 col-md-6 col-sm-5"></div>
        </div>
        <div class="form-group form-row">
          <div class="col-2">
            <%= f.label "会員ステータス" %>
          </div>
          <div class="col-lg-4 col-md-4 col-sm-5">
            <%= f.radio_button :is_valid, true %>
            <%= f.label "有効" %>
            <%= f.radio_button :is_valid, false %>
            <%= f.label "退会" %>
          </div>
          <div class="col-lg-6 col-md-6 col-sm-5"></div>
        </div>
        <div class="form-group form-row">
          <div class="col-2"></div>
          <div class="col-lg-4 col-md-4 col-sm-5">
            <%= f.submit '変更を保存' ,class: "btn btn-success" %>
          </div>
          <div class="col-lg-6 col-md-6 col-sm-5"></div>
        </div>
    <% end %>
      </div>
    <div class="col-lg-1 col-md-0 col-sm-0"></div>
  </div>
</div>