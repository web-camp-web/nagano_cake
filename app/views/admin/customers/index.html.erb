<div class="container">
  <h2 class="page-header">会員一覧</h2>
  <div class="row">
    <div class="col-lg-2 col-md-1 col-sm-0"></div>
    <div class="col-lg-8 col-md-10 col-sm-12">
      <% if @customers.exists? %>
        <table class="table table-hover">
          <thead class="thead-light">
            <tr>
              <th>会員ID</th>
              <th>氏名</th>
              <th>メールアドレス</th>
              <th>ステータス</th>
            </tr>
          </thead>

          <tbody>
            <% @customers.each do |customer| %>
              <tr>
                <td><%= customer.id %></td>
                <td>
                  <%= link_to admin_customer_path(customer.id) do %>
                    <%= customer_full_name(customer.id) %>
                  <% end %>
                </td>
                <td><%= customer.email %></td>
                <td>
                  <% if customer.is_valid == true %>
                    <p class="text-success">有効</p>
                  <% else %>
                    <p class="text-muted">退会</p>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      <% else %>
       <h3>顧客データがありません</h3>
      <% end %>
    </div>
    <%= paginate(@customers) %>
    <div class="col-lg-2 col-md-1 col-sm-0"></div>
  </div>
</div>