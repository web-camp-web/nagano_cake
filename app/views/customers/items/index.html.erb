<div class="container">
  <div>
    <h2 class="page-header">商品一覧 <%= @items.count %>件</h2>
    <% @items.each do |item| %>
      <%# if item.is_active == true %>
      <div>
        <p><%= attachment_image_tag item, :image %></p>
        <p><%= link_to item.name, item_path(item.id) %></p>
        <p><%= item.price %></p>
      </div>
      <%# end %>
    <% end %>
  </div>
  <div class="row offset-5">
  <%= paginate @items %>
  </div>
</div>
