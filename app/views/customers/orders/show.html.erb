<div class="container">
  <h2 class="head-line title_h2 text-center">注文履歴詳細</h2>
  <div calss="row">
    <div>
    <p>注文情報</p>
  	    <table class="table table-bordered table-condensed">
          <tbody>
            <tr>
              <th>注文日</th>
          	  <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
            </tr>
            <tr>
              <th>配送先</th>
              <td><%= "〒#{@order.delivery_postcode}" %></br>
                	<%= @order.delivery_address %></br>
                	<%= @order.delivery_name %>
              </td>
            </tr>
            <tr>
              <th>支払方法</th>
              <td><%= @order.payment_method %></td>
            </tr>
            <tr>
              <th>ステータス</th>
              <td><%= @order.status %></td>
            </tr>
          </tbody>
        </table>
    </div>

    <div>
      <p>請求情報</p>
        	<table class="table  table-bordered table-condensed">
            <tr>
              <th>商品合計</th>
              <td><%= @order.total_price.to_s(:delimited) %>円</td>
            </tr>
            <tr>
              <th>配送料</th>
              <td><%= postage.to_s(:delimited) %>円</td>
            </tr>
            <tr>
              <th>ご請求金額</th>
              <td><%= (@order.total_price + postage).to_s(:delimited) %>円</td>
            </tr>
        </table>
    </div>
    <div>
    	<p>注文内容</p>
        <table class="table table-striped table-bordered table-condensed">
        	<thead>
  	      <tr>
  	      	<th>商品</th>
  	        <th>単価(税込)</th>
  	      	<th>個数</th>
  	      	<th>小計</th>
  	      </tr>
        	</thead>
        	<tbody>
        	<% @order_items.each do |order_item| %>
            <tr>
  	          <td><%= order_item.item.name %></td>
  	          <td><%= tax_market_price(order_item.id).to_s(:delimited) %>円</td>
  	          <td><%= order_item.quantity %></td>
  	          <td><%= order_items_sub_price(order_item.id).to_s(:delimited) %>円</td>
            </tr>
          <% end %>
          </tbody>
        </table>
    </div>
  </div>
</div>