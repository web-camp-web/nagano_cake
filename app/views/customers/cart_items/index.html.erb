
<div class="container">
  <div class="row">
    <h2 class="col-8 page-header">ショッピングカート</h2>
    <h4 class="col-4"><%= link_to "カートを空にする", all_destroy_path, method: :delete, class: 'btn btn-danger' %></h4>
  </div>
  <div class="row">
    
    

    <% if flash[:notice] %>
     <p id="notice">
       <%= flash[:notice] %>
     </p>
   <% end %>
    <table class="table table-danger table-striped">
      <thead>
        <tr>
          <th>商品名</th>
          <th>単価（税込）</th>
          <th>数量</th>
          <th>小計</th>
        </tr>
      </thead>

      <tbody>
      <% @sum = 0 %>
      <% @cart_items.each do |cart_item| %>
        <tr>
          <td><%= cart_item.item.name %></td>
          <td><%= (cart_item.item.price * @tax).to_i %>円</td>

          <%= form_with model: cart_item, url: cart_item_path(cart_item), method: :put, local: true do |f| %>
            <td><%= f.number_field :quantity, min: 1, max: 10 %>
            <%= f.submit "数量変更" , class: 'btn btn-success'%></td>
          <% end %>
          <td><%= (cart_item.item.price * @tax).to_i * (cart_item.quantity ).to_i %>円</td>
          <td><%= link_to "削除する", cart_item_path(cart_item), method: :delete , class: 'btn btn-danger'%></td>

          <% @sum += (cart_item.item.price * @tax).to_i * (cart_item.quantity ).to_i %>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
  <div class="row">
    <h3 class="col-md-8"><%= link_to "買い物を続ける", root_path, class: 'btn btn-primary' %></h3>
    <h3 class="col-md-4">合計　：　<%= @sum %>円</h3>
  </div>

  <h2 class="text-center"><%= link_to "情報入力に進む", new_order_path, class: 'btn btn-success'%></h2>
</div>