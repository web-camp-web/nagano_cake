       <% sum = 0 %>
      <% cart_items.each do |cart_item| %>
        <tr>
          <td><%= cart_item.item.name %></td>
          <td><%= (cart_item.item.price * (1 + tax)).to_i %>円</td>

          <%= form_with model: cart_item, url: cart_item_path(cart_item), method: :patch, remote: true do |f| %>
              <td><%= f.number_field :quantity, min: 1, max: 10 %>
              <%= f.submit "数量変更" , class: 'btn btn-success'%></td>
            <% end %>

          <td><%= (cart_item.item.price * (1 + tax)).to_i * (cart_item.quantity ).to_i %>円</td>
          <td id="cart_item_<%= cart_item.id%>"><%= link_to "削除する", cart_item_path(cart_item), method: :delete ,remote: true, class: 'btn btn-danger'%></td>

          <% sum += (cart_item.item.price * (1 + tax)).to_i * (cart_item.quantity ).to_i %>
        </tr>
      <% end %>

      </tbody>
    </table>
  </div>
  <div class="row">
    <h3 class="col-md-8"><%= link_to "買い物を続ける", root_path, class: 'btn btn-primary' %></h3>
    <h3 class="col-md-4 price_price">合計　：　<%= sum %>円</h3>
  </div>