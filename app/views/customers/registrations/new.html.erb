<div class="container">
  <div class="row">
    <h2 class="page-header">新規会員登録</h2>
  </div>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "customers/shared/error_messages", resource: resource %>
    <div class="row form-group mt-5">
      <%= f.label :"名前", class: "col-2 col-form-label" %>
      <%= f.label :"(姓)", class: "col-1 col-form-label" %>
      <%= f.text_field :last_name, autofocus: true, placeholder: "令和", class: "col-3 form-control" %>
      <%= f.label :"(名)", class: "col-1 col-form-label" %>
      <%= f.text_field :first_name, autofocus: true, placeholder: "道子", class:"col-3 form-control" %>
    </div>

    <div class="row form-group">
      <%= f.label :"フリガナ", class: "col-2 col-form-label" %>
      <%= f.label :"(セイ)", class: "col-1 col-form-label" %>
      <%= f.text_field :last_name_kana, autofocus: true, placeholder: "レイワ", class: "col-3 form-control" %>
      <%= f.label :"(メイ)", class: "col-1 col-form-label" %>
      <%= f.text_field :first_name_kana, autofocus: true, placeholder: "ミチコ", class: "col-3 form-control" %>
    </div>

    <div class="row form-group">
      <%= f.label :"メールアドレス", class: "col-3 col-form-label" %>
      <%= f.email_field :email, autofocus: true, placeholder: "sample@exanple.com", class: "col-3 form-control" %>
    </div>

    <div class="row form-group">
      <%= f.label :"郵便番号(ハイフンなし)", class: "col-3 col-form-label" %>
      <%= f.text_field :postcode, autofocus: true, placeholder: "0000000", class: "col-3 form-control" %>
    </div>

    <div class="row form-group">
      <%= f.label :"住所", class: "col-3 col-form-label" %>
      <%= f.text_field :address, autofocus: true, placeholder: "東京都渋谷区代々木神園町0-0", class: "col-7 form-control" %>
    </div>

    <div class="row form-group">
      <%= f.label :"電話番号(ハイフンなし)", class: "col-3 col-form-label" %>
      <%= f.text_field :phone_number, autofocus: true, placeholder: "00000000000", class: "col-3 form-control" %>
    </div>

    <div class="row form-group">
      <%= f.label :"パスワード(6文字以上)", class: "col-3 col-form-label" %>
      <%= f.password_field :password, autocomplete: "new-password", class: "col-3 form-control" %>
    </div>

    <div class="row form-group">
      <%= f.label :"パスワード(確認用)", class: "col-3 col-form-label"%>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "col-3 form-control" %>
    </div>

    <div class="row form-group">
      <%= f.submit "新規登録", class: "btn btn-success col-2 offset-3 mt-1" %>
    </div>
  <% end %>
  <div class="row">
    <h2 class="page-header mt-3">既に登録済みの方は</h2>
  </div>
  <div class="row">
    <p class="sign-up-leading"><%= render "customers/shared/links" %>からログインしてください。</p>
  </div>
</div>