<h2>ログイン</h2>
<h3>会員の方はこちらから</h3>
<%= flash[:error] %>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :"メールアドレス" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :"パスワード" %><br />
    <%= f.password_field :password, autocomplete: "current-password" %>
  </div>

  <div class="actions">
    <%= f.submit "ログイン" %>
  </div>
<% end %>

<div>
  <h2>会員登録がお済みでない方</h2>
  <p><%= render "customers/shared/links" %>から新規登録を行ってください。</p>
</div>