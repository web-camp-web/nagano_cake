<div class="container">
  <div class="row">
    <div>
      <h2>マイページ</h2>
      <p>
        <strong>登録情報</strong>
        <%= link_to "編集する", edit_customer_path(@customer.id) %>
      </p>
      <table class="table">
        <tbody>
          <tr>
            <td>氏名</td>
            <td><%= @customer.last_name %> <%= @customer.first_name %></td>
          </tr>
          <tr>
            <td>カナ</td>
            <td><%= @customer.last_name_kana %> <%= @customer.first_name_kana %></td>
          </tr>
          <tr>
            <td>郵便番号</td>
            <td><%= @customer.postcode %></td>
          </tr>
          <tr>
            <td>住所</td>
            <td><%= @customer.address %></td>
          </tr>
          <tr>
            <td>電話番号</td>
            <td><%= @customer.phone_number %></td>
          </tr>
          <tr>
            <td>メールアドレス</td>
            <td><%= @customer.email %></td>
          </tr>
        </tbody>
      </table>
      <p>
        <strong>配送先</strong>
        <%= link_to "一覧を見る", deliveries_path %>
      </p>
      <p>
        <strong>注文履歴</strong>
        <%= link_to "一覧を見る", orders_path %>
      </p>
    </div>
  </div>
</div>