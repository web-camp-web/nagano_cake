<div class="container">
  <div class="row">
    <h2 class="page-header mypage">マイページ</h2>
  </div>
  <div class="customer-info">
    <p>
      <strong class="customer-strong">登録情報</strong>
      <%= link_to "編集する", edit_customer_path(@customer.id), class: "btn btn-success customer-edit-btn" %>
    </p>
    <div class="row">
    <div class="col-sm-12 col-md-10 col-lg-8">
      <table class="table table-bordered  customer-info-table">
        <tbody>
          <tr>
            <th>氏名</th>
            <td><%= @customer.last_name %> <%= @customer.first_name %></td>
          </tr>
          <tr>
            <th>カナ</th>
            <td><%= @customer.last_name_kana %> <%= @customer.first_name_kana %></td>
          </tr>
          <tr>
            <th>郵便番号</th>
            <td><%= @customer.postcode %></td>
          </tr>
          <tr>
            <th>住所</th>
            <td><%= @customer.address %></td>
          </tr>
          <tr>
            <th>電話番号</th>
            <td><%= @customer.phone_number %></td>
          </tr>
          <tr>
            <th>メールアドレス</th>
            <td><%= @customer.email %></td>
          </tr>
        </tbody>
      </table>
    </div>
    </div>
    <p class="row mt-4">
      <strong class="customer-strong col-2">配送先</strong>
      <%= link_to "一覧を見る", deliveries_path, class: "btn btn-primary customer-info-btn" %>
    </p>
    <p class="row">
      <strong class="customer-strong col-2">注文履歴</strong>
      <%= link_to "一覧を見る", orders_path, class: "btn btn-primary customer-info-btn" %>
    </p>
  </div>
</div>