<div class="container">
  <div class="row">
    <h2 class="page-header delivery-edit">配送先編集</h2>
  </div>
      <%= form_with model: @delivery, url: delivery_path, method: :patch, local: true do |f| %>
        <%= render "layouts/error", obj: @delivery %>
        <div class="row form-group mt-4">
          <%= f.label :"郵便番号(ハイフンなし)", class: "col-form-label col-form-label-sm col-2" %>
          <%= f.text_field :postcode, class: "form-control form-control-sm col-2"  %>
        </div>
        <div class="row form-group">
          <%= f.label :"住所", class: "col-form-label col-form-label-sm col-2" %>
          <%= f.text_field :address, class: "form-control form-control-sm col-5" %>
        </div>
        <div class="row form-group">
          <%= f.label :"宛名", class: "col-form-label col-form-label-sm col-2" %>
          <%= f.text_field :name, class: "form-control form-control-sm col-2" %>
          <%= f.submit :"変更内容を保存", class: "btn btn-success btn-sm offset-4 delivery-edit-btn" %>
        </div>
      <% end %>

</div>